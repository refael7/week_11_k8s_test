FROM python:3.11-slim

WORKDIR /app

COPY requirements.txt .

RUN pip install --no-cache-dir -r requirements.txt

COPY . .

EXPOSE 8501

CMD ["streamlit", "run", "main.py", "--server.address=0.0.0.0", "--server.port=8501"]

docker build -t streamlit-app .
docker run -p 8501:8501 streamlit-app
http://localhost:8501

apiVersion: apps/v1
kind: Deployment
metadata:
  name: streamlit-deployment
spec:
  replicas: 1
  selector:
    matchLabels:
      app: streamlit
  template:
    metadata:
      labels:
        app: streamlit
    spec:
      containers:
        - name: streamlit
          image: streamlit-app:latest
          imagePullPolicy: IfNotPresent
          ports:
            - containerPort: 8501

---
apiVersion: v1
kind: Service
metadata:
  name: streamlit-service
spec:
  selector:
    app: streamlit
  type: NodePort
  ports:
    - protocol: TCP
      port: 80
      targetPort: 8501
      nodePort: 30001

kubectl apply -f streamlit-deployment.yaml

kubectl get pods
kubectl get cvs
http://<NODE-IP>:30001


apiVersion: v1
kind: Pod
metadata:
  name: streamlit-pod
  labels:
    app: streamlit-pod
spec:
  containers:
    - name: streamlit
      image: streamlit-app:latest
      ports:
        - containerPort: 8501

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: streamlit-deployment
spec:
  replicas: 1
  selector:
    matchLabels:
      app: streamlit-deployment
  template:
    metadata:
      labels:
        app: streamlit-deployment
    spec:
      containers:
        - name: streamlit
          image: streamlit-app:latest
          ports:
            - containerPort: 8501

---
apiVersion: v1
kind: Service
metadata:
  name: streamlit-service
spec:
  type: NodePort
  selector:
    app: streamlit-deployment
  ports:
    - protocol: TCP
      port: 80
      targetPort: 8501
      nodePort: 30001

kubectl apply -f streamlit-all.yaml


kubectl get pods
kubectl get deployments
kubectl get svc

